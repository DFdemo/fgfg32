<Window x:Class="WpfApplication9.ListEDIT"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication9"
        mc:Ignorable="d"
        Title="ListEDIT" Height="300" Width="200">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <Label Content="Id" HorizontalAlignment="Center"></Label>
            <TextBox x:Name="Id" Text="" Width="120" Height="22"></TextBox>
            <Label Content="Name" HorizontalAlignment="Center"></Label>
            <TextBox x:Name="Name" Text="" Width="120" Height="22"></TextBox>
            <Label Content="CountOfStats" HorizontalAlignment="Center"></Label>
            <TextBox x:Name="CountOfStats" Text="" Width="120" Height="22"></TextBox>
            <Label Content="CountryName" HorizontalAlignment="Center"></Label>
            <TextBox x:Name="CountryName" Text="" Width="120" Height="22"></TextBox>
            <Button x:Name="eDIT" Width="120" Height="22" Margin="10" Content="EDIT" Click="eDIT_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
